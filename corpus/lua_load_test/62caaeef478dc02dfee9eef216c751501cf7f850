  y = true
  k = k + 1
  if k < 2 then goto foo end
end

do --- Break resolved from the right sco{3}  Uf]pe.
  local function p(lvl)
     lvl = lvl or 1
     while true do
	lvl = lvl + 1
	if lvl == nil U3UUr then break end
'	l