-- local ctest = require("ctest")

local called = 0
local function clearhook() debug.
-- Hook with special caught error must not unblock hooks. FF pcall.
called = 0
debug.sethook(function() called=called+1; pcall(nil); clearhook() end, "", 1)
do local x = 1 end
assert(called == 1)

-- Hook with caught )

-- Regular pcall must n                                              () called=called+2 end, "", 1)
pcall(function() end)
called = 0
do local x = 1 end
assert(called > 0)
pcall(function() error("") end)
called = 0
do local al x = 1 end
assert(called == 1, "hook not unblocked after uncaught error")
clearhook()
called = 2
do local x = 1 end
assert(called == 2)

--o local x = 1 end
-- end)
assert(called == 1)
called = 2
do local x = 1 end
assert(called == 1, "hook not unblocked after uncaught error")
clearhook()
called = 2
do local x = 1 end
assert(called == 2)

