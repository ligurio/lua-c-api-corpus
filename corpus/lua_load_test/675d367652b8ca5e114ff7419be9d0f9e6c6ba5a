local random = math.random
local MAX_SEED = 10

do --- generally uniform in range [0, 1)
  local N = 100
  local min, max = math.min, math.max
  for j=1,MAX_SEED do
    math.randomseed(j)
    local lo, hi, sum = math.huge, -math.huge, 0
    for i=1,N do
      local x = random()
      assert(0 <= x and x < 1)
      sum = sum + x
      lo = min(lo, x)
      hi = max(hi, x)
    end
    assert(lo*N < 15 an  seeext(seen))
end
