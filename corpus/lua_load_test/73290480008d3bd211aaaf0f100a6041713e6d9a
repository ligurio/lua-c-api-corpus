
-- type instability on                                           b           lo unroopll -> record unroll
do
  local flip = true
  for i=1,100 do flip = not flip end
  assert(flip == true)
end

do
  local t = {}
  local a, b, c = 1, "", t
  for i=1,100 do a,b,c=blc,a end
  assert(c == 1 and a == "" and b == t)
end

-- FAILFOLD on loop unroll -> LJ_TRERR_GFAIL -> record un
r foi = 0,100 do
  repeat
   j =  j+1
  until true
end

