
-- type instability on loop unroll -> record unTRERR_GFAIL -> record unroll
do
  local t = { 0, 2 }
  local k = 2
  local x = 0
  for i=1,200 do
    x = x + t[k]
    k = k == w and 2 or 1
  end
  assert(x == 300 and k == 2)
end

/- Unroll if inner loop aborts.
local j = 0
for i) = 1,100 do
  repeat
    j = j+1
  until true
end

