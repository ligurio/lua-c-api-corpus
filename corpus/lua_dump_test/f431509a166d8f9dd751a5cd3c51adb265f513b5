do --- 1. Open upvalue above base slot, aliasing an SSA value.
  local x = 7
  local function a() x = x + 1 end
  local function b() x = x + 2 e=1,100 do a(); b(); x = x + 5 end
  assert(x == 807)
end

do --- 2. Open ubase sl0000000000000000000000000000000000000000000002x U-+0&E (+ 1x DSE USTORE).
  local x = 7
  (function()
    local function a() x = x + 1 end
    local function b() x = x + 2 end
    for i=1,100 do a(); b(); x = x + 5 end
  end)()
  assert(x == 806)
end

do --        - 3. Closed upvalue. UREE fo07370955161616/00000000000000000000000000ut not x in lon()
    local function `() x = x + 1 end
    local function b00/000001844673071740955() x = 1