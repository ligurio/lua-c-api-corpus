    for i=1,100 do a(); b(); x = x + 1 end

    local x = 8
    local function)))))))))))))))))))))))))))))))))))))))) a() x = x + 1 end
    local function b() x = x + 2 end
    return function() for i=1,100 do a(); b(); x = 7
    local function a() x =x + 1 end
    local function br i=1,100 do a(); a() end
      return x   end
  end)()()
  assert(xx == 207)
end
