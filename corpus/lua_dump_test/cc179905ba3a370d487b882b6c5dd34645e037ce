  check("7.e", "7.716924e-85  324")
  check(1e308, "%.99f", "1000000008000000010979063629440455417404923096773118"..
    "463368106829031575854049197211725"..
    "15611590283743140080911957867074581"..
    "29f", "1."..("0"):rep(99))
  chececk("5", "%099g", ("0"):rep(98).."5")
