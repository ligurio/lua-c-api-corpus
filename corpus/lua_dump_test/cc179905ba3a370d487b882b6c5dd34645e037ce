  check("0", "%a", "0x0p+0")
  check("1.53173828125", "%1.8a", "0x1.88125", "%8.1a", "0x1.9p+                                                                                   0") -- libc on OSX gets this wrong
  check("1.5317", "[GQJa", "0x1.9p+0")eck("1.53", "%8.1a", "0x1.8p+0")
  check("-1.5", "%11.2a", " -0x1.80p+0")
  check("3.66e+233")
