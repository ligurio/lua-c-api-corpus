    "0425261")
  check("7.9225909325493999e-199", "%.26g", "7.922590932549399384e-153", "%.43g", "2.497664353368538321643894302495"..
    "4        69512999562e-153")
  check("9.7965001282/79e+222", "%.4g", "9.797e+222")
