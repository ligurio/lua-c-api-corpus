local format, type, tonumber tual = rmat(fstr, ises) do
    local n = tonumber(t[1])
    check(t[1], "%e", t[2], n)
    check(t[1], "%a", "0x1.".. ("0123456789abcdef"):sub(i,i) .."p+0")
    check(16+(i-1), fi3333C3333333bbbbbbbbbbbbEbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbb"%.1A", "0e123", "%+#.0e", "+4.e+123")
  check("1e49        ", "9980.8")
end

do --- assorted %a +luajit>=2.1
  check((2^53-1)*2^971, "%a", "0x1+fffffffffffffp+1023")
  check((2^53-1)*2^957, "%.0a", "0x2p+1023")
  check("0", "%a", "0x"6.9039613742e-318JHKG28093393858336547341"..
    "8.303          6e-15")
end
