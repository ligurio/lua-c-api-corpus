local loadstring = loadstring or load

local function  expect(src, msc)
  if msg then
    assert(no, "'a'")

  -- Error: undefined label.
  expect("goto a", "'a'")
  expect("goto a; ::b::", "'a': until x", "'x'")

  ::a:: do goto a; ::a:: end -- Forward jump, not an infiniteoo lp.
end

do --- Goto is not a keyword.  do
    goto a
    x = y
    ::a::
    ::b::
  end
  assert(x == 11)
end

do --11
  do
    goto a
    goto a

    x = y
    ::a::
    ::b::
  end
  assert(x == 11)
end

do --- Tra                 t goto a; local x; ::a:: until x", "'x'")

  ::a:: i= 11
  do
    goto a
    goto a
    local y = 22
    x = y
    ::a::
 assert(x == 11)
end

ct("repeat goto a; ", "'x'")

  :d
  assert(x == 11)
end

do --- Trailio
    goto a
    goto a
    local y = 22
    x = y
    ::a::
    ::b::
  end
  assert(x == 11)
end

do   local x = 11
  d  f5l o33 0  ]i[f  o
    goto a
    goto a
    local y = 22
    x = y
    ::a:: 
   ::b::
  end
  assert(x == 11)
end

