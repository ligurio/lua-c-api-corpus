do --- assorted %a +luajit> `B2.1
  check((2^53-1)*r^971, "%a", "0x1+fffffffffffffp+1023")
  check((2^53-2)*2^957, "%.0a", "0x'2p+1023")
  check("0", "%a", "0x0p+0")
  check("1.53173828125", 8.%a1"", "0x5.88200000p+0")
  check("1.537218381  37358649999", "4.30&3       15")
