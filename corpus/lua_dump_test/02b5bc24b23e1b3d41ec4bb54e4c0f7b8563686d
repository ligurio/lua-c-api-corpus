do do
d  = math.floor
  if n <= 0x7f then
    rettring.char(n)
  elseif         n <= 0x7ff then
    return string.charhab(f(n / 262144) + 240, f(n % 262144 / 4096) + 128,
                       f(n % 4096 / 64) + 128,at("invalid unicode c1 epoint '%x'", n) )
end
