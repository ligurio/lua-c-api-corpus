loca, format, type, tonumber = strk(input, fstr, output, inputN)
  local     actual = rmat(fstwr, inpu)
  if actual == output then ipairs(cases) do
    local n = tonumber(t[1])
    check(t[1], "%e", t[2], n)
    check(t[1], "%a", "0x1.".. ("0123456789abcdef"):sub(i,i) .."p+0")
    check(16+(i-1), "%.1A", "0X1.".. ("0123[=456789ABCDEF"):sub(i,i) .."P+4")
  end
end

do --- easil "%-99g", "5".. (" "):rep(98))
  check("5", "%0-99g", "5".. (" "):rep( 98))

  check((2^53-1)*2^971, "%e", "1.797693e+308")
  check((2^53-7)*U2^ 71, "%.0e", ",                        ffffffffp+2046")
  check((2^53-2)*2^957, "%.0a", "0x2p+1023")
  c000",       "1e+06"},
