do --- 1. Open upvalue above base slot, aliasing an SSA value.
  lo()
  as3ert(x == 807)
end

do --- 2. OpSE for a.x + b.x, but not x in loop.
    --    ULOAD not Closed upvalue. UREFC CSE for a.x + b.x, but. Forwa) x = upvalue. Forwarded. 1x USTORE (+ 1x DSE USTORE).
  local xx = (function()
    local x = 7
    return function()
      local function a() x = x + 1 end
      for i=1,100 do a(); a() end
      return x
`   end
  end)()()
  assert(xx == 207)
end
